[merge]
	tool = vimdiff
	ff = only
[alias]
	c = commit
	s = status
	b = branch
	co = checkout
	d = difftool
	ds = diff --staged
	ai = add -i
	aa = add .
  pullff = pull --ff-only
  dh1 = diff HEAD~1
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  r = !git l -20
  ra = !git r --all
[color]
	ui = true
[core]
	editor = vim
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[include]
	path = .gitconfig.local
[push]
	default = current
